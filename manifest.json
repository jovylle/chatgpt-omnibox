{
  "manifest_version": 3,
  "name": "AI Search Router",
  "version": "1.0.0",
  "description": "Quick access to your selected AI service with chat keyword - ChatGPT, Claude, Copilot, Perplexity",
  "author": "jovylle",
  
  "permissions": [
    "contextMenus",
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "omnibox": {
    "keyword": "chat"
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Search Router - Type 'chat' in address bar",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}