{
  "manifest_version": 3,
  "name": "AI Omnibox",
  "version": "1.0.0",
  "description": "Search multiple AI services (ChatGPT, Copilot, Claude, Perplexity) with 'chat' keyword",
  "author": "jovylle",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "omnibox": {
    "keyword": "chat"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["popup.js", "options.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Omnibox",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}